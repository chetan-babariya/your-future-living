{% assign btn_text = text | default: 'Click Me' %}
{% assign btn_bg = bg_color | default: '#225458' %}
{% assign btn_color = text_color | default: '#ffffff' %}
{% style %}
  .btn {
    background-color: {{ btn_bg }};
    color: {{ btn_color }};
    padding: 1.85rem 2.4rem;
    display: inline-block;
    text-decoration: none;
    max-height: 5.6rem;
    font-weight: 600;
    transition: all 0.3s;
  }
  .btn:hover {
    background-color: #16181D;
    transition: all 0.3s;
  }
{% endstyle %}

<div class="btn-wrapper">
  <a href="{{ link | default: '#' }}" class="btn" style="">{{ btn_text }}</a>
</div>
