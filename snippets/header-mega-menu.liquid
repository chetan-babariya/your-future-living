{% comment %}
  Mega menu with dynamic collection image and products
  Usage: {% render 'header-mega-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span class="{% if link.child_active %}header__active-menu-item{% endif %}">
                  {{ link.title | escape }}
                </span>
                {{ 'icon-caret.svg' | inline_asset_content }}
              </summary>

              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <!-- Left Side Image -->
                <div class="collection-img">
                  <img
                    id="collection-image"
                    src="{{ link.links[0].object.image | image_url }}"
                    alt="{{ link.links[0].title }}"
                    loading="lazy"
                  >
                </div>

                <!-- Right Side: Categories + Products -->
                <div class="category-menu-and-products" style="display: flex; flex-direction: column; gap: 4.2rem;">
                  <!-- Collection Tabs -->
                  <div class="category-menu">
                    {% for childlink in link.links %}
                      <button
                        type="button"
                        class="mega-menu__link{% if forloop.first %} active{% endif %}"
                        data-image="{{ childlink.object.image | image_url }}"
                        data-title="{{ childlink.title | escape }}"
                        data-collection="{{ childlink.object.handle }}"
                      >
                        {{ childlink.title | escape }}
                      </button>
                    {% endfor %}
                  </div>

                  <!-- Product Grid for Each Collection -->
                  <div class="product-display-area" style="padding: 0 6rem 2rem 6rem;">
                    {% for childlink in link.links %}
                      {% assign collection = childlink.object %}
                      {% if collection != blank and collection.products_count > 0 %}
                        <div
                          class="collection-details{% if forloop.first %} active{% endif %}"
                          data-collection="{{ collection.handle }}"
                        >
                          {% comment %} Tag to Image Map {% endcomment %}
                          {% assign tag_keys = 'group:F9001B,group:F8007V,group:F8023W' | split: ',' %}
                          {% assign tag_values = 'https://cdn.shopify.com/s/files/1/XXXX/group-f9001b.webp,https://cdn.shopify.com/s/files/1/XXXX/group-f8007v.webp,https://cdn.shopify.com/s/files/1/XXXX/group-f8023w.webp'
                            | split: ','
                          %}

                          {% assign all_tags = '' | split: '' %}
                          {% for product in collection.products %}
                            {% for tag in product.tags %}
                              {% if tag contains 'group:' %}
                                {% assign all_tags = all_tags | push: tag %}
                              {% endif %}
                            {% endfor %}
                          {% endfor %}

                          {% assign unique_tags = all_tags | uniq | slice: 0, 6 %}

                          <div class="grouped-products-grid">
                            {% for tag in unique_tags %}
                              {% assign tagged_products = '' | split: '' %}
                              {% for product in collection.products %}
                                {% if product.tags contains tag %}
                                  {% assign tagged_products = tagged_products | push: product %}
                                {% endif %}
                              {% endfor %}

                              {% assign group_products = tagged_products | slice: 0, 3 %}

                              {% if group_products.size > 0 %}
                                <div class="product-group">
                                  {% assign tag_index = tag_keys | index_of: tag %}
                                  {% assign group_image = tag_values[tag_index] %}
                                  {% if group_image %}
                                    <div class="group-image">
                                      <img src="{{ group_image }}" alt="{{ tag | remove: 'group:' }}">
                                    </div>
                                  {% endif %}

                                  <h4>{{ tag | remove: 'group:' }}</h4>
                                  <div class="product-row">
                                    {% for product in group_products %}
                                      <div class="product-card">
                                        <a href="{{ product.url }}">
                                          <img
                                            src="{{ product.featured_image | img_url: 'medium' }}"
                                            alt="{{ product.title }}"
                                          >
                                          <p>{{ product.title }}</p>
                                        </a>
                                      </div>
                                    {% endfor %}
                                  </div>
                                </div>
                              {% endif %}
                            {% endfor %}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span class="{% if link.current %}header__active-menu-item{% endif %}">
              {{ link.title | escape }}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>

<!-- JavaScript to Handle Tab Switching -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const buttons = document.querySelectorAll('.category-menu button');
    const image = document.getElementById('collection-image');
    const allDetails = document.querySelectorAll('.collection-details');

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        // Active button switch
        buttons.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');

        // Image update
        const newSrc = btn.getAttribute('data-image');
        const newAlt = btn.getAttribute('data-title');
        if (newSrc) {
          image.src = newSrc;
          image.alt = newAlt;
        }

        // Product grid update
        const handle = btn.getAttribute('data-collection');
        allDetails.forEach((div) => {
          div.classList.toggle('active', div.getAttribute('data-collection') === handle);
        });
      });
    });
  });
</script>
