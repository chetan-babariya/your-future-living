{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .slider-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .splide__list img {
    width:37rem;
  }
  .splide {
    width: calc(100% - 490px);
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="slider-content">
      <!-- Static Left Side -->
      <div class="slider-detail">
        <h2 class="slider-heading">{{ section.settings.heading }}</h2>

        <div class="slider-dec">
          <p>{{ section.settings.description }}</p>
        </div>

        <a href="{{ section.settings.button_link }}" class="slider-details-btn btn">
          {{ section.settings.button_label }}
        </a>
      </div>

      <!-- Splide Slider -->
      <div class="slider-list splide" id="splide-{{ section.id }}">
        <div class="splide__track">
          <ul class="splide__list">
            {% for block in section.blocks %}
              <li class="splide__slide">
                <img src="{{ block.settings.image | image_url: width: 900 }}" alt="Slide image" loading="lazy">
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('#splide-{{ section.id }}', {
      type: 'loop',
      perPage: 1,
      pagination: true,
      arrows: false,
    }).mount();
  });
</script>
{% schema %}
{
  "name": "About Slider",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "presets": [
    {
      "name": "About Slider"
    }
  ]
}
{% endschema %}
