{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    .slider-section {
    padding: 40px 0;
  }
  .slider-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
  }
  .slider-detail {
    flex: 1;
  }
  .slider-list {
    flex: 1.5;
  }
  .splide__slide img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="slider-content">
      <div class="slider-detail">
        <h2 class="slider-heading">{{ section.settings.heading }}</h2>
        <div class="slider-dec">
          <p>{{ section.settings.description }}</p>
        </div>
        <a href="{{ section.settings.button_link }}" class="slider-details-btn btn">
          {{ section.settings.button_label }}
        </a>
      </div>

      <div class="slider-list splide">
        <div class="splide__track">
          <ul class="splide__list">
            {% for block in section.blocks %}
              {% if block.settings.image %}
                <li class="splide__slide">
                  <img src="{{ block.settings.image | image_url: width: 800 }}" alt="Slide {{ forloop.index }}">
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
{% javascript %}
  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.splide', {
      type: 'loop',
      perPage: 2,
      perMove: 1,
      gap: '1rem',
      arrows: false,
      rewind: true,
      pagination: true,
      breakpoints: {
        989: { perPage: 1 },
        767: { perPage: 2 },
        490: { perPage: 1 },
      },
    });

    // Numbered buttons
    splide.on('pagination:mounted', function (data) {
      data.items.forEach(function (item, index) {
        item.button.textContent = index + 1;
      });
    });

    splide.mount();
  });
{% endjavascript %}
{% schema %}
{
  "name": "Splide Image Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Your future living",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Where smart technology meets sustainability...",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "About us",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "image_slide",
      "name": "Slide Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Splide Image Slider",
      "category": "Media",
      "blocks": [
        {
          "type": "image_slide"
        },
        {
          "type": "image_slide"
        },
        {
          "type": "image_slide"
        }
      ]
    }
  ]
}
{% endschema %}
