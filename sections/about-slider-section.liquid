{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .slider-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
  }

  .slider-detail {
    flex: 1;
    max-width: 40%;
  }

  .slider-heading {
    font-size: 48px;
    margin-bottom: 20px;
  }

  .slider-dec p {
    font-size: 18px;
    margin-bottom: 30px;
  }

  .slider-list {
    flex: 1;
    max-width: 55%;
  }

  .splide__slide img {
    width: 100%;
    border-radius: 10px;
  }
</style>

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="slider-content">
      <!-- Static Left Side -->
      <div class="slider-detail">
        <h2 class="slider-heading">{{ section.settings.heading }}</h2>

        <div class="slider-dec">
          <p>{{ section.settings.description }}</p>
        </div>

        <a href="{{ section.settings.button_link }}" class="slider-details-btn btn">
          {{ section.settings.button_label }}
        </a>
      </div>

      <!-- Splide Slider -->
      <div class="slider-list splide" id="splide-{{ section.id }}">
        <div class="splide__track">
          <ul class="splide__list">
            {% for block in section.blocks %}
              <li class="splide__slide">
                <img src="{{ block.settings.image | image_url: width: 900 }}" alt="Slide image" loading="lazy">
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('#splide-{{ section.id }}', {
      type: 'loop',
      perPage: 1,
      pagination: true,
      arrows: false,
    }).mount();
  });
</script>
{% schema %}
{
  "name": "Image Slider with Text",
  "tag": "section",
  "class": "image-slider-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your future living"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Where smart technology meets sustainability. Discover how our innovative products are transforming modern homes and businesses for a cleaner, smarter future."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "About us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Image Slider with Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}
