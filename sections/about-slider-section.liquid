{%- style -%}
       .section-{{ section.id }}-padding {
         padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
         padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
       }

       @media screen and (min-width: 750px) {
         .section-{{ section.id }}-padding {
           padding-top: {{ section.settings.padding_top }}px;
           padding-bottom: {{ section.settings.padding_bottom }}px;
         }
       }
       .slider-section {
       padding: 10rem 0;
       background-color: #225458;
       color: #ffffff;
     }
     .slider-content {
       display: flex;
       align-items: center;
       justify-content: space-between;
       gap: 10rem;
     }
     .slider-detail {
       width:37.5rem;
       flex-shrink: 0;
     }
     .slider-heading {
       color: #ffffff;
       margin-bottom : 1.6rem;
     }
     .slider-desc {
       line-height: 2.4rem;
     }
     .splide__slide img {
       width: 100%;
       height: auto;
     }
     .splide__track {
       padding-bottom: 9.6rem;
     }
     .slider-details-btn {
       margin-top: 2.4rem;
       background-color: #ffffff;
       color: #000000;
       min-width: 15rem;
     }
     .slider-details-btn:hover {
       color: #ffffff;
     }
     .slider-content .splide__pagination {
       bottom: 0;
       justify-content: start;
     }
    .splide__pagination__page {
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: #fff;
    background-color: transparent;
    font-size: 1.6rem;
    font-weight: 600;
    height: 4rem;
    width: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-origin: border-box;
    background-clip: padding-box, border-box;
    box-sizing: border-box;
    opacity: 1;
    margin:0 1.2rem 0 0;
  }
  .splide__pagination__page.is-active {
    border: 1px solid transparent;
    transform: scale(1);
    height: 4.8rem;
    width: 4.8rem;
    background: transparent;
    background-image: linear-gradient(#225458, #225458),
                      linear-gradient(to bottom right, #71C056, #EBEC89);

    background-origin: border-box;
    background-clip: padding-box, border-box;
    transition: transform .2s linear;
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="slider-content">
      <div class="slider-detail">
        <h2 class="slider-heading">{{ section.settings.heading }}</h2>
        <div class="slider-dec">
          <p>{{ section.settings.description }}</p>
        </div>
        <a href="{{ section.settings.button_link }}" class="slider-details-btn btn">
          {{ section.settings.button_label }}
        </a>
      </div>

      <div class="slider-list splide">
        <div class="splide__track">
          <ul class="splide__list">
            {% for block in section.blocks %}
              {% if block.settings.image %}
                <li class="splide__slide">
                  <img src="{{ block.settings.image | image_url }}" alt="Slide {{ forloop.index }}">
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.splide', {
      type: 'loop',
      perPage: 2,
      perMove: 1,
      focus: 0,
      gap: '2.4rem',
      arrows: false,
      rewind: true,
      pagination: true,
      breakpoints: {
        989: {
          perPage: 1,
        },
        767: {
          perPage: 2,
        },
        490: {
          perPage: 1,
        },
      },
    });
    splide.on('pagination:mounted', function (data) {
      // Add numbers to the pagination buttons
      data.items.forEach(function (item, index) {
        item.button.textContent = index + 1;
      });
    });
    splide.mount();
  });
</script>
{% schema %}
{
  "name": "Splide Image Slider",
  "class": "section slider-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Your future living",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Where smart technology meets sustainability...",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "About us",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "image_slide",
      "name": "Slide Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Splide Image Slider",
      "category": "Media",
      "blocks": [
        {
          "type": "image_slide"
        },
        {
          "type": "image_slide"
        },
        {
          "type": "image_slide"
        }
      ]
    }
  ]
}
{% endschema %}
